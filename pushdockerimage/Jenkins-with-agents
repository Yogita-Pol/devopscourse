pipeline {
  environment{
        DOCKERHUB_CREDS = credentials('dockerhub')
  }
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: python
            image: jenkins/jnlp-agent-python
            command:
            - cat
            tty: true
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
            volumeMounts:
             - mountPath: /var/run/docker.sock
               name: docker-sock
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock
        '''
    }
  }
  stages {
    stage('Clone') {
      steps {
        container('python') {
          checkout scm
          sh 'ls *'
        }
      }
    }
    stage('check wget') {
        steps {
            container('docker') {
                //sh 'docker build -t polyogitag/jenkinstest ./pushdockerimage/' (this will use the tag latest)
		        sh 'wget google.com'
            }
        }
    }
    stage('Build Image') {
        steps {
            container('docker') {
                //sh 'docker build -t polyogitag/jenkinstest ./pushdockerimage/' (this will use the tag latest)
		        sh 'docker build -t polyogitag/mypoc:$BUILD_NUMBER ./pushdockerimage/'
            }
        }
    }
    stage('Docker Login') {
        steps {
            container('docker') {
               //sh 'docker login -u $DOCKERHUB_CREDS_USR -p $DOCKERHUB_CREDS_PSW' (this will leave the password visible)
               sh 'echo $DOCKERHUB_CREDS_PSW | docker login -u $DOCKERHUB_CREDS_USR --password-stdin'
            }
        }
    }
    stage('Docker Push') {
        steps {
            container('docker') {
               sh 'docker push polyogitag/mypoc:$BUILD_NUMBER'
            }
        }
    }
  }
}
